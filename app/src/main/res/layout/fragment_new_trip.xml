<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTripFragment">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24"
        android:scaleType="fitCenter"
        android:contentDescription="@string/new_images_button_description"
        android:id="@+id/trip_images_button"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="0.5"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/trip_name"
                android:inputType="text"
                android:id="@+id/trip_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="0.5"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/trip_destination"
                android:inputType="textAutoComplete"
                android:id="@+id/trip_destination" />
        </com.google.android.material.textfield.TextInputLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="0.5"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/trip_start_date"
                android:inputType="date"
                android:id="@+id/trip_start_date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="0.5"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/trip_end_date"
                android:inputType="date"
                android:id="@+id/trip_end_date" />
        </com.google.android.material.textfield.TextInputLayout>
    </TableRow>
    <EditText
        android:id="@+id/trip_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/trip_description"
        android:gravity="start|top"
        android:inputType="text"
        android:autofillHints="none"/>
</TableLayout>
